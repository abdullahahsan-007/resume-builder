@page "/resume"
@inject BlazorApp2.Services.ResumeService ResumeService
@using BlazorApp2.Models

<head>
    <title>@ResumeService.ResumeData.FirstName @ResumeService.ResumeData.LastName - Resume</title>
</head>

<body style="font-family: Arial, sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px;">
    <table style="width: 800px; margin: auto; border-collapse: collapse; background: white; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);">
        <tr>
            <td style="width: 35%; background: #f4f4f4; vertical-align: top; padding: 20px;">
                <table style="width: 100%;">
                    <tr>
                        <td style="text-align: center; padding-bottom: 20px;">
                            <img src="https://th.bing.com/th?q=Brown+Hair+Girl&w=120&h=120" alt="Profile Picture" style="width: 120px; height: 120px; border-radius: 50%;">
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; font-size: 16px; border-bottom: 2px solid #000; padding-bottom: 5px;">EDUCATION</td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px; padding-top: 10px;">
                           @ResumeService.ResumeData.Education
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; font-size: 16px; border-bottom: 2px solid #000; padding-top: 15px; padding-bottom: 5px;">SKILLS</td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px; padding-top: 10px;">
                            @ResumeService.ResumeData.Skills
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; font-size: 16px; border-bottom: 2px solid #000; padding-top: 15px; padding-bottom: 5px;">CONTACT</td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px; padding-top: 10px;">
                            <b>Email:</b> @ResumeService.ResumeData.Email <br>
                            <b>Phone:</b> @ResumeService.ResumeData.Phone
                        </td>
                    </tr>
                </table>
            </td>
            <td style="width: 65%; padding: 20px; vertical-align: top;">
                <table style="width: 100%;">
                    <tr>
                        <td style="font-size: 26px; font-weight: bold; color: #333; padding-bottom: 5px;">
                            @ResumeService.ResumeData.FirstName @ResumeService.ResumeData.LastName
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 18px; font-weight: bold; color: #666; padding-bottom: 15px;">
                            @ResumeService.ResumeData.Title
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px; color: #555; padding-bottom: 20px;">
                            @ResumeService.ResumeData.About
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight: bold; font-size: 16px; border-bottom: 2px solid #000; padding-bottom: 5px;">MY EXPERIENCE</td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px; padding-top: 10px; padding-bottom: 15px;">
                          @ResumeService.ResumeData.Experience
                        </td>
                    </tr>
                  
                </table>
            </td>
        </tr>
    </table>
    <a href="/form">Edit Resume</a>
</body>